<div class="container">
  <h2> Tasks </h2>
  <div class="row row-fluid">
    <% @tasks.each do |task| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-height-indicator"></div>
          <div class="card-content">
            <div class="card-body">
              <div class="pull-right qty" ><strong> <%= number_to_percentage(task.percent, :precision => 1) %></strong> </div>
              <h6> <%= task.updated_at.strftime("%d %b %Y %l:%M %p") %></h6>
              <div>
                <h3><%= task.text %></h3>
              </div>
              <div class="pull-right">
                <%= link_to  edit_task_path(task) do %>
                  <i class="material-icons">mode_edit</i> 
                <% end %>  
                <%= link_to task_path(task) do %>
                  <i class="material-icons">info_outline</i> 
                <% end %>
                <%= link_to task_path(task), "data-confirm" => "Are you Sure?", :method => :delete do %>
                  <i class="material-icons">delete</i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br><br>
<%= link_to 'New Task', new_task_path, class: "btn btn-raised btn-info" %>